/* auth.wxss */
.login-box {
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 0 40rpx;
  margin-top: 300rpx;
  background: #f4f4f4;
  text-align: center;
}

.wx-login-btn {
  background:rgba(33,33,33,1);
	color: #fff;
	font-size: 29rpx;
  box-shadow:0px 0px 7px 2px rgba(235,235,235,0.5);
  border-radius:5px;
	margin: 0 auto;
	text-align: center;
	width: 95%;
	height: 90rpx;
	line-height: 90rpx;
}
.login-title{
  color:#2c2b2b;
  flex-direction:column;
  display:flex;
  align-items: center;
  justify-content: center;
  width: 100%;    
  font-size: 15px; 
  margin-top: 2px;
  margin-bottom: 5px;
}
.logo-img-box{
  flex-direction:column;
  display:flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}
.img-logo{
  width: 277rpx;
  height: 199rpx;
}
.perssion-title {
  margin-bottom: 10rpx;
	font-size: 29rpx;
	color: #2c2b2b;
	text-align: center;
}
.perssion-info {
  margin-bottom: 65rpx;
	font-size: 26rpx;
	color: #959595;
	text-align: center;
}