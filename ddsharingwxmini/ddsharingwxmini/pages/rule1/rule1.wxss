.order-info {
    padding-top: 5rpx;
    background: #fff;
    height: auto;
    overflow: hidden;
}

.item {
    margin-left: 31.25rpx;
    height: 86rpx;
    line-height: 86rpx;
}

.item .l {
    float: left;
}

.item .r {
    height: 86rpx;
    float: right;
    display: flex;
    align-items: center;
    padding-right: 16rpx;
}

.banner {
    width: 100%;
    height: 330rpx;
}

.banner image {
    width: 100%;
}

.fee-box {
    padding: 40rpx;
}

.rule-img {
    height: 68rpx;
    width: 209rpx;
}

.rule-img image {
    height: 68rpx;
    width: 209rpx;
}

.fee-box .desc-item {
    margin-top: 10px;
}

.bottom {
    position: fixed;
    bottom: 100rpx;
    width: 100%;
}

.btn {
    background-color: #85c43f;
    font-size: 32rpx;
    color: #fff;
    width: 690rpx;
    height: 90rpx;
    border-radius: 50rpx;
    text-align: center;
    line-height: 90rpx;
    margin: 76rpx auto 0 auto;
}

.btn-hover {
    background-color: rgb(168, 244, 84);
}