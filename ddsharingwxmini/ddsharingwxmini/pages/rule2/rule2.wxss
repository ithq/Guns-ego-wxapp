.order-info {
    padding-top: 5rpx;
    background: #fff;
    height: auto;
    overflow: hidden;
}

.item {
    margin-left: 31.25rpx;
    height: 86rpx;
    line-height: 86rpx;
}

.item .l {
    float: left;
}

.item .r {
    height: 86rpx;
    float: right;
    display: flex;
    align-items: center;
    padding-right: 16rpx;
}

.banner {
    width: 100%;
    height: 330rpx;
}

.banner image {
    width: 100%;
}

.fee-box {
    padding: 40rpx;
}

.rule-img {
    height: 68rpx;
    width: 209rpx;
}

.rule-img image {
    height: 68rpx;
    width: 209rpx;
}

.fee-box .desc-item {
    margin-top: 10px;
}

.packageBtn {
    width: 80%;
    border: 1px solid #1391fd;
    height: 100rpx;
    line-height: 100rpx;
    margin: 0 auto;
    border-radius: 5px;
    margin-bottom: 37rpx;
    background: white;
    box-shadow: 0 0 1px #000 inset;
}

.btnFont {
    float: left;
    text-align: center;
    line-height: 96rpx;
    font-size: 29rpx;
    color: #289afb;
    margin-left: 37rpx;
}

.price {
    text-align: center;
    line-height: 96rpx;
    color: white;
    background: #289afb;
    float: right;
    width: 150rpx;
    font-size: 33rpx;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
}