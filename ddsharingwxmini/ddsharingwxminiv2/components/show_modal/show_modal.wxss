/* components/show_modal/show_modal.wxss */
.modal_flex {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.modal_container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  background: rgba(0, 0, 0, 0.4);
  font-family: Microsoft YaHei;
}

.modal_box {
  width: 390rpx;
  background: #fff;
  border-radius: 34rpx;
  padding: 70rpx 90rpx;
  position: relative;
}

.modal_title {
  font-family: Microsoft YaHei;
  font-size: 32rpx;
  font-weight: 700;
  color: #030303;
  padding-bottom: 20rpx;
  padding-top: 30rpx;
}

.modal_content {
  text-align: center;
  font-size: 28rpx;
  line-height: 48rpx;
  color: #404040;
}

.modal_btn {
  width: 244rpx;
  height: 70rpx;
  margin-top: 60rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  color: #fff;
}

.modal_close {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  width: 30rpx;
  height: 30rpx;
  background-image: url("data:image/png;base64,");
  background-repeat: no-repeat;
  background-position: center;
  background-size: 26rpx 26rpx;
}