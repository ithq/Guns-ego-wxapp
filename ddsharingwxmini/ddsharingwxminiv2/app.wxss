/**app.wxss**/
page{
  font-family:Microsoft YaHei;
  font-size: 24rpx;
  color: #000;
}

button::after{
  border:none;
}

.hover_class {
  opacity: 0.8;
}

.theme_color {
  color: #00C176;
}

.theme_color_red {
  color: #FF3944;
}

.gray_color {
  color: #999;
}

.theme_background_color {
  background-color:#00C176;
}

.theme_btn {
  margin: 0 auto;
  background-color:#00C176;
  border-radius: 80rpx;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
}

.flex {
  display: flex;
  box-sizing: border-box;
}

.flex_1 {
  flex: 1;
}

.flex_column {
  flex-direction: column;
}

.flex_center_x {
  display: flex;
  justify-content: center;
  box-sizing: border-box;
} 

.flex_center_y {
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.flex_center_center {
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.flex_between_center {
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.background_img_style {
  background-repeat: no-repeat;
  background-position: center;
}

.image_percent {
  width: 100%;
  height: 100%;
}

.noMore {
  text-align: center;
  font-size: 26rpx;
  color: #b5b5b5;
  line-height: 100rpx;
}

.noData {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -60%);
}

.nullImg {
  width: 250rpx;
  height: 300rpx;
}

.noDataTxt {
  margin-top: 50rpx;
  font-size: 30rpx;
  color: #b5b5b5;
  text-align: center;
}

.border_bottom, .border_bottom_dotted{
	position:relative;
}
.border_bottom::after, .border_bottom_dotted::after{
	content:" ";
	position:absolute;
	left:0;
	width:100%;
  height:1rpx;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transfrom: scaleY(0.5);
  transform: scaleY(0.5);
}

.border_bottom::after {
  bottom:0;
  border-bottom: 1rpx solid rgba(186,186,186, 1);
  color: rgba(186,186,186, 1);
}

.border_bottom_dotted::after {
  bottom:0;
  border-bottom: 1rpx dotted #BABABA;
}
