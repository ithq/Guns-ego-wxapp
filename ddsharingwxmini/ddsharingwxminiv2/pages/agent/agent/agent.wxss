/* pages/agent/agent/agent.wxss */
page{
    background: #F5F5F7;
}
.main{
    height: 100%;
}
.header{
    position: fixed;
    width: 100%;
    padding: 30rpx;
    background: white;
    box-sizing: border-box;
    left: 0;
    top: 0;
    box-shadow:0px 3rpx 22rpx rgba(0,0,0,0.03);
    z-index: 10;
}
.searchBox{
    display: flex;
}
.searchInputBox{
    position: relative;
    width:600rpx;
    height:70rpx;
    background:rgba(245,245,247,1);
    border-radius:36rpx;
}
.search{
    position: absolute;
    width:23rpx;
    height:25rpx;
    top: 23rpx;
    left: 36rpx;
}
.searchInput{
    position: absolute;
    width: 500rpx;
    height: 70rpx;
    line-height: 70rpx;
    left: 70rpx;
    font-size:22rpx;
}
.scanBtn{
    margin-left: 20rpx;
    width:70rpx;
    height:70rpx;
}


.navBar{
    display: flex;
    /* padding: 0 30rpx; */
    font-size:24rpx;
    justify-content: center;
    text-align: center;
    margin-top: 20rpx; 
    font-weight: bold;
}
.barItem{
    flex: 1;
    padding-bottom: 8rpx;
}

.active{
    position: relative;
    color:rgba(0,193,118,1);
}

.active::after{
    position: absolute;
    content: '';
    width: 30rpx;
    height: 2px;
    bottom: 0;
    background: rgba(0,193,118,1);
    bottom: -8rpx;
    left: 50%;
    margin-left: -15rpx;
}

/* 列表 */
.agentList{
    padding: 20rpx 0 0;
    margin-top: 190rpx;
    height: 86vh;
}
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
.listItem{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 0 30rpx;
    background: white;
}
.avatar{
    width: 80rpx;
    height: 80rpx;
}
.userName{
    position: relative;
    width: 580rpx;
    font-size:26rpx;
    margin-left: 30rpx;
    padding: 30rpx 0;
    border-bottom: 1px dashed rgba(216,216,216,1);
}

.btn{
    position: absolute;
    width:88rpx !important;
    height:60rpx;
    line-height: 60rpx;
    border:1px solid rgba(186,186,186,1);
    border-radius:6rpx;
    font-size:24rpx;
    color:rgba(123,123,123,1);
    background: white;
    padding: 0;
    right: 0;
    top: 43rpx;
}
.editBtn{
    right: 108rpx;
}
.bindBtn{
    right: 216rpx;
}
.itemName{
    font-size: 26rpx;
    line-height: 35rpx;
    color:rgba(3,3,3,1);
    margin-top: 10rpx;
}
.itemTc{
    font-size:24rpx;
    line-height: 31rpx;
    color:rgba(123,123,123,1);
    margin-top: 10rpx;
}