/* pages/agent/personalCenter/personalCenter.wxss */
.top{
    height: 490rpx;
    background-size: cover;
}

.earningsBox{
    padding: 150rpx 30rpx 0;
    color: white;
    display: flex;
}
.earnings{
    flex: 1;
    text-align: center;
}
.symbol{
    font-size: 24rpx;
}
.number{
    font-size: 32rpx;
    font-weight: bold;
}
.describe{
    font-size:24rpx;
    margin-top: 10rpx;
}
.amountBox{
    width:690rpx;
    height:279rpx;
    background:rgba(255,255,255,1);
    box-shadow:0px 4rpx 13rpx rgba(0,0,0,0.07);
    border-radius:24rpx;
    margin: -208rpx auto 0;
    padding: 30rpx;
    box-sizing: border-box;
}
.canWithdraw{
    position: relative;
    border-bottom: 1px dashed rgba(186,186,186,1);
    padding-bottom: 31rpx;
}
.cashTxt{
    font-size:26rpx;
    color:rgba(153,153,153,1);
}
.cashNum{
    font-size:32rpx;
    color: black;
    margin-top: 10rpx;
}
.withdrawBtn{
    position: absolute;
    width: 160rpx !important;
    height: 60rpx !important;
    line-height: 60rpx;
    padding: 0;
    top: 14rpx;
    right: 30rpx;
}
.balanceList{
    margin-top: 30rpx;
    display: flex;
}
.listItem{
    flex: 1;
    text-align: center;
}
.numberSmall{
    font-size:26rpx;
}
.describeGray{
    font-size:24rpx;
}


/* 菜单入口 */
.itemBox{
    width: 100%;
    padding: 40rpx 40rpx 0; 
    border-radius:45rpx;
    z-index: 10;
    background: white;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    flex-wrap: wrap;
    text-align: center;
    margin-top: 20rpx;
}
.item{
    width: 200rpx;
    height: 200rpx;
    padding: 35rpx 0;
    box-sizing: border-box;
    box-shadow:0px 0px 8px rgba(0,0,0,0.07);
    border-radius:24px;
    margin-bottom: 35rpx;
}
.itemImg{
    width: 80rpx;
    height: 80rpx;
}
.itemTxt{
    font-size:28rpx;
}