/* pages/agent/order/order.wxss */
page{
    background: #F5F5F7;
}
.header{
    position: fixed;
    width: 100%;
    padding: 30rpx;
    background: white;
    box-sizing: border-box;
    left: 0;
    top: 0;
    box-shadow:0px 3rpx 22rpx rgba(0,0,0,0.03);
    z-index: 10;
}

.searchInputBox{
    position: relative;
    width:690rpx;
    height:70rpx;
    background:rgba(245,245,247,1);
    border-radius:36rpx;
}
.search{
    position: absolute;
    width:23rpx;
    height:25rpx;
    top: 23rpx;
    left: 36rpx;
}
.searchInput{
    position: absolute;
    width: 600rpx;
    height: 70rpx;
    line-height: 70rpx;
    left: 70rpx;
    font-size:22rpx;
}
.scanBtn{
    margin-left: 20rpx;
    width:70rpx;
    height:70rpx;
}


.navBar{
    display: flex;
    /* padding: 0 30rpx; */
    font-size:24rpx;
    justify-content: center;
    text-align: center;
    margin-top: 20rpx; 
    font-weight: bold;
}
.barItem{
    flex: 1;
    padding-bottom: 8rpx;
}

.active{
    position: relative;
    color:rgba(0,193,118,1);
}

.active::after{
    position: absolute;
    content: '';
    width: 30rpx;
    height: 2px;
    bottom: 0;
    background: rgba(0,193,118,1);
    bottom: -8rpx;
    left: 50%;
    margin-left: -15rpx;
}



.rental_record_list {
    padding: 30rpx 30rpx 0;
    margin-top: 190rpx;
    height: 86vh;
    box-sizing: border-box;
}
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
  .rental_record_item {
    position: relative;
    width:610rpx;
    background:#fff;
    border-radius:20rpx;
    padding: 20rpx 40rpx;
    margin-bottom: 30rpx;
  }
  
  .rental_record_status {
    padding: 30rpx 0;
    margin-bottom: 30rpx;
    border-bottom: 1px dashed #BABABA;
  }
  
  .rental_status {
    font-size: 26rpx;
    padding-bottom: 20rpx;
  }
  
  .rental_amount {
    font-size: 32rpx;
    font-weight: 700;
  }
  
  .rental_record_content {
    font-size: 26rpx;
  }
  
  .rental_record_content_item {
    display: inline-block;
    min-width: 154rpx;
    padding-bottom: 20rpx;
  }
  
  .rental_record_content_item_data {
    display: inline-block;
  }
  
  .rental_record_copy {
    display: inline-block;
    margin-left: 16rpx;
    border:1px solid #BABABA;
    border-radius:4rpx;
    font-size: 18rpx;
    color: #000;
    line-height: 24rpx;
    padding: 0 4rpx;
  }