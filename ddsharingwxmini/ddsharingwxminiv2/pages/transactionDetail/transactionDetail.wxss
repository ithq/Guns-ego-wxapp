.transaction_warp {
  position: relative;
}

.container {
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
}

.transaction_nav {
  width: 100%;
  padding: 40rpx 55rpx;
}

.transaction_nav_btn {
  width: 240rpx;
  height: 80rpx;
  border-radius: 48rpx;
  margin: 0 40rpx;
  background: #fff;
  border: 1px solid;
  border-color: rgba(186, 186, 186, 0.8);
  color: #999999;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
}

.active {
  background: #00C176;
  border-color: #00C176;
  box-shadow: 0rpx 6rpx 10rpx rgba(0, 193, 118, 0.3);
  color: white;
}

.transaction_content_warp {
  position: relative;
  box-shadow: 0px -15px 32px rgba(0, 0, 0, 0.03);
  border-radius: 60rpx 60rpx 0 0;
  background: #fff;
  overflow: hidden;
  width: 100%;
}

.transaction_scroll {
  position: absolute;
  top: 0;
  bottom: 0;
  padding-top: 40rpx;
}

.transaction_list {
  padding: 0rpx 36rpx 40rpx;
}

.transaction_scroll::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

scroll-view [style*="overflow"]::-webkit-scrollbar {
  display: none;
}

.transaction_mounth {
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #999999;
}

.transaction_mounth_list_item {
  height: 153rpx;
}

.transaction_icon_warp {
  width: 74rpx;
  height: 100%;
}

.transaction_icon {
  width: 42rpx;
  height: 42rpx;
}

.transaction_mounth_list_item_list {
  flex: 1;
  height: 100%;
  border-bottom: 1px dashed rgba(186,186,186,0.5);
}

.transaction_mounth_list .transaction_mounth_list_item:nth-last-of-type(1) {
  border-color: #fff;
}

.transaction_type_warp {
  flex-direction: column;
}

.transaction_type {
  font-size: 30rpx;
  padding-bottom: 20rpx;
}

.transaction_time {
  font-size: 24rpx;
  color: #999999;
}

.transaction_amount {
  font-size: 30rpx;
  color: #F80000;
}

.transaction_amount_warp {
  flex-direction: column;
}

.transaction_amount_consume {
  font-size: 30rpx;
  color: #F80000;
  padding-bottom: 10rpx;
}