/* pages/historicalFeedback/historicalFeedback.wxss */
.container {
  padding: 0 35rpx;
}
.listItem {
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx 0;
  border-bottom: 1px solid #E5E5E5;
}

.content {
  width: 65vw;
}

.problem {
  display: flex;
}

.title {
  font-size: 30rpx;
  color: #000000;
  white-space: nowrap;
  text-overflow: ellipsis;
  word-break: break-all;
  overflow: hidden;
}

.dot-box {
  width: 20rpx;
  height: 28rpx;
  position: relative;
}

.dot {
  position: absolute;
  top: 8rpx;
  right: 0rpx;
  width: 10rpx;
  height: 10rpx;
  background: #00C176;
  border-radius: 50%;
}

.reply {
  padding-top: 10rpx;
  font-size: 24rpx;
  color: #7B7B7B;
  text-overflow: -o-ellipsis-lastline;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.date {
  font-size: 24rpx;
  color: #7B7B7B;
}