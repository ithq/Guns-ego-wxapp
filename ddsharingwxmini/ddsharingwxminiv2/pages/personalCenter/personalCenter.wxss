/* pages/personalCenter/personalCenter.wxss */
.backgroundClass {
  color: #fff;
}

.user_info_container {
  padding: 0rpx 44rpx 0;
  color: #fff;
}

.user_info_warp {
  height: 560rpx;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
}

.user_info_login {
  padding-bottom: 10rpx;
}

.user_info_login_login {
  font-size: 48rpx;
  font-weight: bold;
}

.user_info_login_id {
  font-size:28rpx;
  font-weight:400;
  padding-top: 20rpx;
}

.user_info_login_avatar {
  width: 138rpx;
  height: 138rpx;
  border-radius: 50%;
  overflow: hidden;
}

.active {
  display: flex;
  background: #fff;
  box-sizing: border-box;
  border: 4rpx solid #fff;
}

.user_info {
  padding: 15rpx 0 20rpx ;
}

.user_info_item_warp {
  flex-direction: column;
  padding: 3vh 30rpx;
  margin-right: 20rpx;
}

.user_info_item {
  font-size: 32rpx;
  font-weight: bolder;
  padding-bottom: 4rpx;
}

.user_info_item_content {
  font-size: 24rpx;
}

.symbol {
  font-size:24rpx;
}

.menu_warp {
  margin-top: -43rpx;
  padding: 1rpx 42rpx;
  background:#fff;
  border-radius:32rpx 32rpx 0px 0px;
}

.menu_item {
  height: 6vh;
  padding-top: 20rpx;
  margin-top: 10rpx;
  font-size:28rpx;
  background-image: url("data:image/png;base64,");
  background-repeat: no-repeat;
  background-size: 15rpx 28rpx;
  background-position: center right;
}

.menu_item_img_warp {
  width: 50rpx;
  height: 50rpx;
  margin-right: 24rpx;
}

.menu_item_img {
  width: 50rpx;
  height: 50rpx;
}

.menu_item_title {
  position: relative;
}

.dot {
  position: absolute;
  top: 12rpx;
  right: -22rpx;
  width: 10rpx;
  height: 10rpx;
  background: #00C176;
  border-radius: 50%;
}

/* 登录 */
.login_warp {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
}

.login_content {
  width: 450rpx;
  background: #fff;
  border-radius: 34rpx;
  padding: 70rpx 50rpx 50rpx;
  position: relative;
}

.login_title {
  text-align: center;
  font-size: 32rpx;
  font-weight: 700;
  color: #030303;
  padding-bottom: 20rpx;
  padding-top: 30rpx;
}

.login_item {
  color: #404040;
  font-size: 28rpx;
  padding: 20rpx 0;
}

.login_input {
  margin-top: 8rpx;
  padding: 14rpx 12rpx;
  font-size: 28rpx;
  border: 1px solid rgba(186,186,186,0.7);
  border-radius: 12rpx;
}

.login_btn {
  width: 244rpx;
  height: 70rpx;
  margin-top: 20rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  color: #fff;
}

.btn_defail {
  background: #7FE0BA;
}

.btn_active {
  background: #00C176;
}

.login_close {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  width: 30rpx;
  height: 30rpx;
  background-image: url("data:image/png;base64,");
  background-repeat: no-repeat;
  background-position: center;
  background-size: 26rpx 26rpx;
}


.line-img{
  width: 100%;
  vertical-align: text-bottom;
}
