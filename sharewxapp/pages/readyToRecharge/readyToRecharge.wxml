<!--pages/offlineGeneral/getChargingCode/getChargingCode.wxml-->
<view id="printbtn" class="homepagebtn" style=" background: url({{resourceUrl}}/images/icon/homePage.png) no-repeat; background-size: 100% 100%;" bindtap='goWxAppHomePageForHomePageButton'></view>
<view class="banner" style=" background-image: url({{resourceUrl}}/images/images/showPassword.png), -webkit-linear-gradient(top, #33dfcd, #1dc2ff);background-repeat: no-repeat; background-position: bottom right;background-size: auto 100%;">
  <view class="topfeedback">
    <view>
      <view  style='background:url({{resourceUrl}}/images/icon/unlock.png);background-repeat: no-repeat; background-position: bottom center;background-size: auto 100%;height:85rpx; height:80rpx;  margin-bottom: 5rpx'> </view>
      <view>请输入下密码</view>
    </view>
  </view>
</view>
<view class="passwordbox">
  <view style='height: 3%;'></view>
  <view class="passwordremark">请再充电器键盘中输入下密码充电</view>
  <view class="passwordcode">
    <view class="codelistfive">
      <view hidden="{{password0!=''?false:true}}"><text>{{password0}}</text></view>
      <view hidden="{{password1!=''?false:true}}"><text>{{password1}}</text></view>
      <view hidden="{{password2!=''?false:true}}"><text>{{password2}}</text></view>
      <view hidden="{{password3!=''?false:true}}"><text>{{password3}}</text></view>
      <view hidden="{{password4!=''?false:true}}"><text>{{password4}}</text></view>
      <view hidden="{{password5!=''?false:true}}"><text>{{password5}}</text></view>
    </view>  
    <view>
      <view class="text"><text>*</text>再次扫充电器二维码结束使用</view>
    </view>
  </view>
  <view class="bottom">
    <view class="flex">
      <button bindtap="faultOption" class="btn btnFaultOption">故障上报</button>
    </view>
  </view>
</view>