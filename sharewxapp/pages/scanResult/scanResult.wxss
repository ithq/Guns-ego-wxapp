  bottom: 15.66%;
}

.yourmoney {
  color: #fff;
}

.moneytext {
  line-height: 60rpx;
  font-size: 24rpx;
}

.moneynum {
  font-size: 64rpx;
}

.scenecont {
  position: relative;
  width: 100%;
  height: 65.3%;
}

.phonebox {
  width: 92%;
  height: 9%;
  margin: 0 auto;
}

.phone {
  display: flex;
  align-items: center;
  height: 76%;
  padding: 0 5%;
  border: 1px solid #f3f4f6;
  border-radius: 10rpx;
  box-shadow: 0 8rpx 20rpx rgba(151, 160, 173, 0.2);
}

.phone label {
  width: 30%;
  font-size: 28rpx;
  color: #323232;
}

.phone label text {
  color: #f00;
}

.phone input {
  width: 70%;
  font-size: 26rpx;
  outline: none;
}

.phone input::-webkit-input-placeholder {
  color: #bababa;
  font-size: 26rpx;
}

.phone input::-moz-placeholder {
  /* Mozilla Firefox 19+ */
  color: #bababa;
  font-size: 26rpx;
}

.phone input:-moz-placeholder {
  /* Mozilla Firefox 4 to 18 */
  color: #bababa;
  font-size: 26rpx;
}

.phone input:-ms-input-placeholder {
  /* Internet Explorer 10-11 */
  color: #bababa;
  font-size: 26rpx;
}

.feescale {
  height: 50.38%;
  padding: 0 4%;
  color: #959595;
  font-size: 26rpx;
}

.feescaletitbox {
  display: flex;
  align-items: center;
  height: 12%;
}

.feescaletitflex {
  width: 100%;
}

.feescaletit {
  color: #323232;
  font-size: 32rpx;
  line-height: .56rem;
}

.feescaletitl {
  float: left;
}

.feescaletitr {
  float: right;
  font-size: 26rpx;
}

.feescaletitl text {
  margin-right: 15rpx;
  color: #ffc436;
  font-size: 32rpx;
}

.feescaletitr, .feescaletitr text {
  color: #959595;
}

.feescaletitr text {
  margin-left: 10rpx;
  font-size: 26rpx;
}

.feescaletit image {
  display: inline-block;
  width: 30rpx;
  height: 24rpx;
  margin-right: 15rpx;
}

.feescale .feemain {
  line-height: 46rpx;
}
.feescale .feemain {
  line-height: 46rpx;
}
.feescale view{
