page,form {
  height: 100%;
}

view, image, text {
  line-height: 1;
}

.swiper {
  position: relative;
  margin-top: 12rpx;
}

.scenecontbox {
  position: relative;
  width: 100%;
  height: 100%;
  background: #fff;
}

.banner {
  position: relative;
  background: url(../img/scanresult.png), -webkit-linear-gradient(top, #36a3ff, #1dc2ff);
  background-image: url(../img/scanresult.png), linear-gradient(top, #36a3ff, #1dc2ff);
  background-repeat: no-repeat;
  background-position: bottom right;
  background-size: auto 100%;
}

.yourmoney {
