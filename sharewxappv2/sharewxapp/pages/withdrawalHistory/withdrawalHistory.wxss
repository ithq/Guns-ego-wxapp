/* pages/personCenter/withdrawalHistory/withdrawalHistory.wxss */
page{
    background: #f5f5f5;
    font-size: 30rpx;
    color: #323232;
}
.withdrawals-historycont{
    margin-bottom: 30rpx;
    padding: 40rpx 40rpx 20rpx;
    background: #fff;
    overflow: hidden;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.contentt,.contentb{
    width: 100%;
    overflow: hidden;
}
.contentt{
    margin-bottom: 30rpx;
    font-size: 36rpx;
}
.contentb{
    font-size: 28rpx;
    color: #9b9b9b;
}

.chargeid,.time{
    float: left;
}
.chargeid{
    width: 60%;
}
.time{
    width: 54%;
}
.money{
    width: 40%;
}
.blank{
    width: 46%;
}
.doing{
    display: inline-block;
    margin-top: 20rpx;
    color: #3799f3;
}
.mart{
    margin-top: 20rpx;
}
.time .iconfont{
    margin-right: 10rpx;
    font-size: 30rpx;
    font-weight: bold;
    color: #2196f3;
}
.money,.blank{
    float: right;
}
.money,.blank{
    text-align: right;
}
.blank{
    color: #2a9fef;
}
.blankactive{
  color: #ccc;
}

.blank .bankstatus{
  color: #f00;
}
.money{
  font-weight: bolder;
  color: #000;
}
.btn{
    float: right;
    width: 200rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    color: #2a9fef;
    border: #2a9fef 1px solid;     
    font-size: 30rpx;
    border-radius: 5rpx;
    -webkit-border-radius: 5rpx;
    transition-property: background-color;
    -webkit-transition-property: background-color;
    transition-duration: 0.3s;
    -webkit-transition-duration: 0.3s;
    transition-timing-function: ease;
    -webkit-transition-timing-function: ease;
}
.btn:active{
    color: #fff;
    background: -webkit-linear-gradient(left, #076ab9, #1092c1);
    background: -moz-linear-gradient(left, #076ab9, #1092c1);
    background: -linear-gradient(left, #076ab9, #1092c1); 
}
.withdrawals-out{
  margin-bottom:20rpx;
}

.withdrawals-out .withdrawals-historycont{
  margin-bottom: 0;
  border-bottom: 1px solid #f5f5f5;
}
.withdrawals-contin{
  padding-left: 100rpx;
}
