/*扫码按钮*/
.down-button{
    position: fixed;
    bottom: 300rpx;
    width:100%;
    border-radius: 5rpx;
    display: flex;    /*设置显示样式**/
    align-items: center;    /**子view垂直居中*/
    vertical-align: center; /**垂直居中*/
    justify-content: center; /**内容居中*/
}

.down-button form{
  display: block;
  width: 85%;
  height: 100%;
}
