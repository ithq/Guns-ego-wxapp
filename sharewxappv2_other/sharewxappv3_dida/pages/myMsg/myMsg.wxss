page{
	background: #fff;
  height: 100%;
}
.cozytip .listtext{
	position: relative;
	text-indent: 28rpx;
}
.listtextcont{
	font-size: 26rpx;
	line-height: 50rpx;
	color: #444;
}
.scrollListVw{
  margin-top: 100rpx;
  height: 90%;
}
.nv{
  z-index: 1;
  top: 0;
	height: 100rpx;
  position: fixed;
  width: 100%;
	border-bottom: #f1f3f6 1rpx solid;
	line-height: 100rpx;
	font-size: 0;
	background: #fff;
}
.nv .nvli{
	width: 50%;
	height: 100rpx;
	display: inline-block;
	text-align: center; 
	font-size: 28rpx;
}
.nv .nvli .flex{
	height: 100%;
	display: inline-block;
}
.nv .nvli.active .flex{
	color: #FF610A;
	border-bottom: 4rpx #FF610A solid;
}
.flwRcddetail{
	font-size: 26rpx;
	color: #959595;
}

.messageview{
  background: rgba(0, 0, 0, .7);
  align-items: center;
  width: 100%;
  top: 0;
  left: 0;
  justify-content: center;
  z-index: 5;
  position: fixed;
  display: flex;
  height: 100%;
}
.flwRcdtit:after{
	border-radius: 50%;
	width: 14rpx;
	top: 11rpx;
	position: absolute;
	content: '';
	height: 14rpx;
	background: #FF610A;
	left: -36rpx;
}
.alreadyread .flwRcdtit:after{
	background: #3aff64;
}
.flwRcd{
	border-bottom: 1rpx solid #f1f3f6;
	padding: 37rpx 34rpx 42rpx 76rpx;
}
.flwRcdtit{
	position: relative;
	margin-bottom: 20rpx;
	font-size: 32rpx;
	color: #444;
}
.flwRcdtit text{	
	float: right;
	margin-left: 16rpx;
	font-size: 30rpx;
	color: #444;
}

.read{
  background: #ccc;
}
.line{
	margin: 0 40rpx;
	background: #e4e7eb;
	display: inline-block;
	height: 24rpx;
	width: 1rpx;
}
.messageviewcont{
  box-sizing: border-box;
  min-height: 200rpx;
  width: 90%;
  background: #fff;
  padding: 40rpx;
}
.messageviewcont view{
  margin: 20rpx;
  overflow: hidden;
  width: 100%;
}
.layertittext,.layerconttext{
  float: left;
}
.messagelayer{
	justify-content: center;
	position: fixed;
	align-items: center;
	width: 100%;
	height: 100%;
	display: flex;
	top: 0;
	left: 0;
	background: rgba(0,0,0,.4);
}
.layertittext{
  font-weight: bold;
}
.layerconttext{
  width: 80%;
}

.messagelayercont{
	width: 82.44%;
	height: 74.62%;
	position: relative;
}
.messagelayercont .cont{
	background: #fff;
	border-radius: 10rpx;
	width: 100%;
	height: 83.33%;
}
.cnttit{
	width: 100%;
	height: 24%;
	display: flex;
	align-items: center;
	color: #fff;
}
.cnttit .time,
.cnttit .tit{
	padding: 0 30rpx;
	line-height: 50rpx;
}
.cnttit .time{
	font-size: 26rpx;
}
.cnttit .tit{
	font-size: 34rpx;
}
.cntDtls{
  overflow: auto;
	padding: 40rpx 30rpx;
  height: 76%;
}
.cntDtls .tit{
	color: #484848;
	margin: 34rpx 0;
	font-size: 28rpx;
}
.cntDtls .listtext{
	margin-bottom: 14rpx;
	color: #959595;
	line-height: 40rpx;
	font-size: 24rpx;
}
.costdetails .listtext{
	color: #484848;
}
.costdetails text{
	width: 200rpx;
	color: #959595;
	display: inline-block;
}
.msglyClose{
	bottom: 0;
	text-align: center;
	color: #fff;
	position: absolute;
	width: 100%;
}
.msglyClose text{
	font-size: 80rpx;
	text-align: center;	
}
.cozytip .listtext:after{
	background: #FF610A;
	content: '';
	height: 10rpx;
	top: 16rpx;
	width: 10rpx;
	border-radius: 50%;
	position: absolute;
	left: 0;
}
.hd {
  display: none;
}