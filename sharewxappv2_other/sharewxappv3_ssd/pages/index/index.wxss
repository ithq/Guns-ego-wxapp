/* pages/index/index.wxss */
.container{
  height: 100vh;
  width: 100%;
  overflow: hidden;
}
#map{
  width: 100%;
  height: 94%;
}
.couponentryout{
  position: relative;
  width: 100%;
  height: 5%;
}

.couponentry{
  position: relative;
  width: 70%;
  height: 100%;
  margin: 0 20% 0 10%;
  color: #fff;
  font-size: 24rpx;
  overflow: hidden;
}
.couponentry .animate{
  position: absolute;
  top: 10rpx;
  width: 76%;
  white-space: nowrap;
}
.search {
  position: relative;
  background-color:#FFFFFF;
  height: 9%;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.touxiang-imgred{
  z-index: 2;
  position: absolute;
  top: 10rpx;
  left: 75rpx;
  width: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  border-radius: 50%;
  background: #f00;
  color: #fff;
  font-size: 20rpx;
}
.search form{
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.search-img {
  margin: auto 20rpx auto 20rpx;

}

.search .text {
  height: 80rpx;
  line-height: 80rpx;
  width: 80%;
  margin-right: 20rpx;
  margin-top: auto;
  margin-bottom: auto;
  font-size: 28rpx;
  padding-left: 20rpx;
  background:#DDDDDD;
  border-radius:10px;
  color: #C3C3C3;
}
.search .text:active{
  background: #ddd;
}
.touxiang-img{
  position: relative;
  margin:15rpx 20rpx 15rpx 15rpx;
  padding: 0;
  width: 85rpx;
  height: 85rpx;
  border:5rpx solid #fff;
  border-radius: 50%;
  background: transparent;
}

.button-hover.touxiang-img{
  border:5rpx solid #ddd;
}
.touxiang-img image{
  display: block;
  width: 100%;
  height: 100%;
}
.listbtn{
  display: flex;
  flex-direction: row;
  margin-top: auto;
  margin-bottom: auto;
  padding-left: 0;
  padding-right:0;
  background: transparent;
  line-height:inherit;
}
.listbtn:active{
  background: transparent;
}
  .listbtn::after{
    border: 0;
  }
.icon-liebiao{
  color: #fff;
  font-size: 60rpx;
}
.icon-sousuo{
  margin-right: 10rpx;
  font-size: 34rpx;
  color: #C3C3C3;
}
.messagebtn{
  float: right;
  position: relative;
  padding-left:0;
  padding-right:0;
  background: transparent;
  line-height:inherit;
}

.messagebtn::after{
  border: 0;
}
.icon-message{
  color: #fff;
  font-size: 60rpx;
}
.icon-message:active{
  color: #ccc;
}
.has-message{
  position:absolute;
  right:22rpx;
  top:5rpx;
  width:12rpx;
  height:12rpx;
  background:#ffb922;
  border-radius:50%;
}

.messagebtnview{
  position: relative;
  padding-left:30rpx;
  padding-right:30rpx;
}
.listbtnview,.messagebtnview{
  background: #FFFFFF;
}
.button-hover .icon-message,.button-hover .icon-liebiao{
  color: #333;
}
@-webkit-keyframes marquee {
  0% { left: 100%; }
  100% { left: -100%; }
  }
@keyframes marquee {
  0%{left:100%}
  100%{left: -100%}
  }
.marquee_div {
  display: block;
  width: 200%;
  height: 30px;
  font-size: 28rpx;
  
  position: absolute;
  overflow: hidden;

  -webkit-animation: marquee 6s linear infinite;
  -moz-animation: marquee 6s linear infinite;
  -ms-animation: marquee 6s linear infinite;
  -o-animation: marquee 6s linear infinite;
  animation: marquee 6s linear infinite;
}

