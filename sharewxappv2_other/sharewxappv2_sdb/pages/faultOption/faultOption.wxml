  </view>
  <view class='line'></view>
  <view class='item faultReport'>
    <image bindtap="faultReport" class='img' src="/img/icon/guzhangshangbao.png"></image>
    <text bindtap="faultReport" class='text'>{{faultReportText}}</text>
  </view>
</view>